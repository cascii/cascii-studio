{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cascii_studio",
  "version": "0.1.0",
  "identifier": "com.hjoncour.cascii_studio",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:8765",
    "beforeBuildCommand": "trunk build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "cascii_studio",
        "width": 1600,
        "height": 1200
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
